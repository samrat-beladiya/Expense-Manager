<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:orientation="vertical">

    <include
        android:id="@+id/about_toolbar"
        layout="@layout/about_toolbar"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="92dp"
        android:layout_gravity="center"
        android:src="@mipmap/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font5"
        android:text="Expense Manager"
        android:textAlignment="center"
        android:textSize="33dp" />

    <TextView
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/font5"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Track record of your Income and Expense "
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/font5"
        android:gravity="center_horizontal"
        android:text="So that you can manage it properly. "
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/font5"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="BELIEVE IN"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font9"
        android:gravity="center"
        android:padding="5dp"
        android:text="SAVE MONEY LIVE BETTER"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/font5"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="DEVELOPED BY :"
        android:textAppearance="?android:textAppearanceMedium"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="219dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font9"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="SAMRAT BELADIYA"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold" />


</LinearLayout>